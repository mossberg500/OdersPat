<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  

    <servlet>
        <servlet-name>GoodsServlet</servlet-name>
        <servlet-class>ua.orders.servlets.GoodsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GoodsServlet</servlet-name>
        <url-pattern>/goods</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>ua.orders.servlets.ClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/clients</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrdersServlet</servlet-name>
        <servlet-class>ua.orders.servlets.OrdersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrdersServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>




</web-app>